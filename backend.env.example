# API published port on host machine (recommended: avoid 8080 to reduce conflict risk)
API_PORT=18080
API_PORT_INTERNAL=8080

# Dedicated data stores for this backend stack
POSTGRES_USER=fbif
POSTGRES_PASSWORD=replace-with-strong-password
POSTGRES_DB=fbif_form

# Frontend public origin (served by your existing NGINX)
WEB_ORIGIN=https://form.example.com
CSRF_COOKIE_SECURE=true

# Required application secrets
# Generate DATA_KEY with:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
DATA_KEY=replace-with-32-byte-base64-key
DATA_HASH_SALT=replace-with-at-least-8-chars

# Feishu Bitable settings
FEISHU_APP_ID=cli_xxx
FEISHU_APP_SECRET=replace-with-secret
FEISHU_APP_TOKEN=app_token_xxx
FEISHU_TABLE_ID=tbl_xxx

# Optional runtime toggles
RUN_DB_MIGRATE=true
RUN_WORKER=true

# Optional OSS integration
# OSS_ACCESS_KEY_ID=
# OSS_ACCESS_KEY_SECRET=
# OSS_BUCKET=
# OSS_REGION=
# OSS_PUBLIC_BASE_URL=
